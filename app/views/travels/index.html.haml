-provide(:title, "Jobs")
%h1 Looking for a job

%table.table
  %thead
    %tr
      %th Job
      %th Description
      %th Employee

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.position
        %td= job.description
        %td= link_to job.user.name, user_path(job.user)
        
%p
  = link_to "Add a job", new_job_path