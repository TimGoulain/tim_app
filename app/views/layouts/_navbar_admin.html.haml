%nav.navbar-collapse
  .container-fluid
    .navbar-header
      %button.navbar-toggle{type: "button", data: {toggle: "collapse", target: ".navbar-collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Sector", sectors_path
        %li= link_to "Users", users_path
        %li= link_to "Job offers", offers_path
        %li= link_to "Contact", contact_path
        %li= link_to "Travel offers", travels_path
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: '#'}
            %span= current_user.name
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Edit my profile", profile_edit_path
            %li= link_to "My profile", user_path(current_user)
            %li.divider
            %li= link_to "Log out", destroy_user_session_path, method: :delete
