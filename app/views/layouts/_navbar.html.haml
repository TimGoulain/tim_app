%nav.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle{type: "button", data: {toggle: "collapse", target: ".navbar-collapse"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Home", root_path, id: "logo", class: "navbar-brand"
    .collapse.navbar-collapse
      - if !user_signed_in?
        .navbar-right{style: "margin-right: 0"}
          = link_to "Log in", new_user_session_path, class: 'btn btn-success navbar-btn'
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "About", about_path
        %li= link_to "Users", users_path
        %li= link_to "Articles", '#'
        %li= link_to "Ideas", '#'
        %li= link_to "Contact", contact_path
        %li= link_to "Help", help_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: '#'}
              %span= current_user.name
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit my profile", profile_edit_path
              %li= link_to "My profile", user_path(current_user)
              %li.divider
              %li= link_to "Log out", destroy_user_session_path, method: :delete
