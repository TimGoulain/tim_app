= simple_form_for(@user) do |f|
 
  = f.input :name
  = f.input :email
  = f.input :birth, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12,
                              order: [:day, :month, :year]
  = f.input :phone, as: :tel
  = f.input :driving_licence
  = f.input :linkedin_url
  = f.input :current_location
  = f.input :headline
  = f.input :about_me
  = f.input :skills
  = f.submit
