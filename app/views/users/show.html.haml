- provide(:title, "My profile")
.leftpart  
  .col-sm-4
    .well.picture
      Blabla
    .well.information
      .label.label-default= "main information"  
      .job.information
        .birth
          - if @user.birth
            Born on
            #{@user.birth.strftime("%d %B %Y")}
        .user.location
          %b.fa.fa-map-marker
          - if @user.current_location.blank?
            On the road
          - else
            = @user.current_location
        .user.email
          - if @user.email
            %b.fa.fa-envelope
            = @user.email    
        .user.phone
          - if @user.phone
            %b.fa.fa-phone
            = @user.phone
        .user.driving
        - if @user.driving_licence
          %b.fa.fa-car
          Driving Licence 
  
    .well.sectors
      .label.label-default= "sectors"  
      %br
      .sectors.content
        Blabla
  
    .well.skills
      .label.label-default= "skills"
      %br
      .skills.content
        = @user.skills
    
    .well.languages
      .label.label-default= "Languages"  
      %br
      .languages.content
        Languages
    
    .well.computer
      .label.label-default= "computer skills"  
      %br
      .computer.content
        Computer skills
.rightpart  
  .col-sm-8
    .row.header
      %h1.strong 
        = @user.name
    .well.well-lg.about
      .aboutme
        %strong About me
      .aboutmetext
        = @user.about_me
  
  - if can? :edit, @user 
    = link_to profile_edit_path, class: "btn btn-default" do
      %b.fa.fa-pencil-square-o
    %br
  
    .experiences  
      %h2 Latest experiences
      - if can? :edit, @user
        .row.add
          .col-xs-6
            = link_to 'Add a job', new_job_path, class: "btn btn-info"
          .col-xs-6
            = link_to 'Add a travel', new_travel_path, class: "btn btn-warning"
      %br
      .row.jobs
        = render @user.jobs 
      %br
      .row.travels
        = render @user.travels 
  
    .row.back
      = link_to 'Back', users_path, class: "btn btn-default"