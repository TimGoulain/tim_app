.left-information
  .well.picture
    - if @user.avatar
      .user.image
        = image_tag @user.avatar.url(:square), :size => '150x150'
    - else 
      = "Click here to add a picture"

  .sidebox.information
    .left-title
      main information
    .job.information
      .birth
        - if @user.birth
          Born on
          #{@user.birth.strftime("%d %B %Y")}
      .user.location
        %b.fa.fa-map-marker
        - if @user.current_location.blank?
          On the road
        - else
          = @user.current_location
      .user.email
        - if @user.email
          %b.fa.fa-envelope
          = @user.email    
      .user.phone
        - if @user.phone
          %b.fa.fa-phone
          = @user.phone
      .user.driving
      - if @user.driving_licence
        %b.fa.fa-car
        Driving Licence 

  .sidebox.sectors
    .left-title
      sectors  
    %br
    .sectors.content
      - if @user.sector
        = @user.sector
      - else
        - if can? :edit, @user
          = link_to profile_edit_path, class: "btn btn-default" do
            %b.fa.fa-pencil-square-o
            Add sectors

  .sidebox.skills
    .left-title
      skills
    %br  
    .skills.content
      - if @user.skills
        = @user.skills
      - else
        - if can? :edit, @user
          = link_to profile_edit_path, class: "btn btn-default" do
            %b.fa.fa-pencil-square-o
            Add skills
  
  .sidebox.languages
    .left-title
      Languages
    %br
    .languages.content
      - if @user.languages
        = @user.languages
      - else
        - if can? :edit, @user
          = link_to profile_edit_path, class: "btn btn-default" do
            %b.fa.fa-pencil-square-o
            Add languages
  
  .sidebox.computer
    .left-title
      computer skills
    %br
    .computer.content
      - if @user.computer_skills
        = @user.computer_skills
      - else
        - if can? :edit, @user
          = link_to profile_edit_path, class: "btn btn-default" do
            %b.fa.fa-pencil-square-o
            Add computer skills
