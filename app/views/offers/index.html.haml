- provide(:title, "Job offers")

.offer-index
  %h1 find a job
 
.container-fluid.offers
  .row.search
    = form_tag(offers_path, method: 'get', id: "search-form") do
      = text_field_tag :search, params[:search], placeholder: "Search"
      = submit_tag "Search", class: "btn btn-default", :name => nil
      - if !@offers.present? 
        = "There are no offer for you yet" #{params[:search}
  %br 
  .row.offer
    = render @offers.reverse
  .row.newoffer
    = link_to 'Post a new job', new_offer_path, class: "btn btn-info"
